<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body style="background-color: white;">
    <%- include('./partials/nav') %>

    <div class="container">
      <div class="row row-cols-3">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card col mt-4" style="box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" width="300px" height="220px" style="border-bottom: 1px solid black;" />
            <div class="card-body">
              <h5 class="card-title" st><%= blog.title %></h5>
              <p>
                <% const words = blog.body.split(' '); %>
                <% const maxLength = 10; %>
                <% if (words.length > maxLength) { %>
                  <%= words.slice(0, maxLength).join(' ') %> ...
                <% } else { %>
                  <%= blog.body %>
                <% } %>
              </p>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <div style="height: 50px;">
      
    </div>
    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %>
  </body>
</html>
